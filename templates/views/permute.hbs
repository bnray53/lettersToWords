        }

        #header{
            background-color: lightgray;
            text-align: center;

            padding-top: 5px;
            padding-bottom: 5px;

            margin-left: 50px;
            margin-right: 50px;
            margin-top: -15px;

            -moz-box-shadow: inset -7px 0 10px -7px rgba(0,0,0,0.4), rgba(0,0,0,0.6) -10px 10px 15px;
	        -webkit-box-shadow: inset -7px 0 10px -7px rgba(0,0,0,0.4), rgba(0,0,0,0.6) -10px 10px 15px;
            box-shadow: inset -7px 0 10px -7px rgba(0,0,0,0.4), rgba(0,0,0,0.6) -10px 10px 15px;
        }

        @media only screen and (max-width: 600px) {
            #header{
            background-color: lightgray;
            text-align: center;

            padding-top: 5px;
            padding-bottom: 5px;

            margin-left: 30px;
            margin-right: 30px;
            margin-top: -15px;

            -moz-box-shadow: inset -7px 0 10px -7px rgba(0,0,0,0.4), rgba(0,0,0,0.6) -10px 10px 15px;
