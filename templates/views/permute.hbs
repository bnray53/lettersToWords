        <link rel="stylesheet" href="/css/styles.css">
        
        <style>
        #backGround{
            background-color: rgb(151, 151, 151);
        }
        
        #mainBody {
            padding: 0;
            padding-bottom: 25px;
            padding-top: 5px;
            margin-top: 0px;
            margin-left: 50px;
            margin-right: 50px;
            background-color: rgba(255, 255, 255, 0.829);

            -moz-box-shadow: inset rgba(0,0,0,0.3) -5px -5px 10px, rgba(0,0,0,0.6) -10px 10px 15px;
	        -webkit-box-shadow: inset rgba(0,0,0,0.3) -5px -5px 10px, rgba(0,0,0,0.6) -10px 10px 15px;
            box-shadow: inset rgba(0,0,0,0.3) -5px -5px 10px, rgba(0,0,0,0.6) -10px 10px 15px;
        }

        @media only screen and (max-width: 600px) {
           #mainBody {
            padding: 0;
            padding-bottom: 25px;
            padding-top: 5px;
            margin-top: 0px;
            margin-left: 30px;
            margin-right: 30px;
            background-color: rgba(255, 255, 255, 0.829);

            -moz-box-shadow: inset rgba(0,0,0,0.3) -5px -5px 10px, rgba(0,0,0,0.6) -10px 10px 15px;
	        -webkit-box-shadow: inset rgba(0,0,0,0.3) -5px -5px 10px, rgba(0,0,0,0.6) -10px 10px 15px;
            box-shadow: inset rgba(0,0,0,0.3) -5px -5px 10px, rgba(0,0,0,0.6) -10px 10px 15px;
